<?xml version="1.0"?>
<ruleset name="Project Coding Standards">
    <description>WordPress Coding Standards for this project</description>

    <file>.</file>
    <exclude-pattern>/vendor/</exclude-pattern>
    <exclude-pattern>/node_modules/</exclude-pattern>
    <exclude-pattern>/build/</exclude-pattern>
    <exclude-pattern>/assets/dist/</exclude-pattern>

    <arg value="sp"/>
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="4"/>

    <rule ref="WordPress"/>

    <config name="minimum_supported_wp_version" value="6.0"/>

    <!-- Replace with actual text domain -->
    <config name="text_domain" type="array">
        <element value="CHANGE-ME"/>
    </config>

    <!-- Replace with actual function/class prefix -->
    <config name="prefixes" type="array">
        <element value="change_me"/>
    </config>
</ruleset>
